<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlueActivity">

    <Button
        android:id="@+id/btn_bluetoothEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PÃ¥/Av"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_BTenableDiscovery"/>

    <Button
        android:id="@+id/btn_BTenableDiscovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitta Bluetooth"
        app:layout_constraintEnd_toStartOf="@+id/btn_bluetoothEnable"
        app:layout_constraintStart_toEndOf="@+id/btn_findUnpairedDevice"
        app:layout_constraintTop_toTopOf="@+id/btn_findUnpairedDevice" />

    <Button
        android:id="@+id/btn_findUnpairedDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pair"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_newDevices"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@+id/btn_BTenableDiscovery"
        app:layout_constraintTop_toBottomOf="@+id/btn_BTenableDiscovery"
        tools:layout_editor_absoluteX="114dp" />


</androidx.constraintlayout.widget.ConstraintLayout>